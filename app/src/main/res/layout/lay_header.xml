<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llHeader"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp150"
        android:scaleType="centerCrop"
        android:src="@drawable/header_video" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:paddingTop="@dimen/dp10"
            android:scaleType="fitXY"
            android:src="@drawable/icon_back_button" />

        <FrameLayout
            android:id="@+id/flVideo"
            android:layout_width="@dimen/dp40"
            android:layout_height="40dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/dp10"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/navigation_video_icon" />

            <TextView
                android:id="@+id/tvVideoNo"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_gravity="right|top"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp10"
                android:textStyle="bold" />


        </FrameLayout>

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:scaleType="fitXY"
            android:src="@drawable/icon_search" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/overlay_title_bg_icon"
        android:gravity="left|center"
        android:paddingLeft="@dimen/dp10"
        android:text="category name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
