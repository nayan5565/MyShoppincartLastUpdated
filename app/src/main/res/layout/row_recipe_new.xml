<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp120"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginTop="@dimen/dp10">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dp70"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@+id/img"
        android:ellipsize="end"
        android:maxEms="7"
        android:singleLine="true"
        android:text="Medium Text" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img"
        android:text="$100"
        android:textColor="#333333"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tvPastPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/tvPrice"
        android:text="$150"
        android:textColor="#9B9B9B" />

    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/tvPastPrice"
        android:text="15%"
        android:textColor="#7ED321" />

    <TextView
        android:id="@+id/tvNew"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_new_tag"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tcAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100g"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgCart"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp40"
        android:scaleType="fitXY"
        android:src="@drawable/icon_buy_before" />

    <ImageView
        android:id="@+id/imgColor"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_toRightOf="@+id/img"
        android:background="@drawable/circle"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imgTick"
        android:layout_width="20dip"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp18"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_toRightOf="@+id/img"
        android:src="@drawable/ic_action_tick" />

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp40"
        android:layout_toRightOf="@+id/imgColor"
        android:background="@drawable/circle"
        android:gravity="center"
        android:scaleType="fitXY"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imgTickForSize"
        android:layout_width="20dip"
        android:layout_height="20dp"
        android:layout_below="@+id/tvPrice"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp5"
        android:layout_toRightOf="@+id/imgColor"
        android:src="@drawable/ic_action_tick"
        android:visibility="gone" />

    <ImageView
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp10"
        android:src="@drawable/forward_button" />

    <ImageView
        android:id="@+id/imgHalanagad"
        android:layout_width="@dimen/dp50"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/new_pic"
        android:visibility="gone" />

</RelativeLayout>